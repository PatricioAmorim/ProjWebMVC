@model IEnumerable<WebVendasMVC.Models.Vendas>
@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>


<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="IniDate">Min Date</label>
                    <input type="date" class="form-control" name="IniDate" value=@ViewData["IniDate"] />
                </div>
                <div class="form-group">
                    <label for="FimDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["FimDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total sales = @Model.Sum(obj => obj.ValVendas).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data_Venda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedores)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedores.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValVendas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data_Venda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedores.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedores.Department.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValVendas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>